<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono del medicamento -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_medication"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical" />

        <!-- Información del medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del medicamento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCantidadMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 0 unidades"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvHorarioMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cada 0 horas"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvProximaToma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próxima toma: --:--"
                android:textSize="12sp"
                android:textColor="@color/accent_green"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/tvFechaMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha: 01/01/2025"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <!-- Indicador de estado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivEstadoMedicamento"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvEstadoTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="10sp"
                android:textColor="@color/accent_green"
                android:layout_gravity="center"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>