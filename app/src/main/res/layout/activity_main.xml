<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_primary"
        android:padding="16dp">

        <!-- Header con título y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medi Care"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vigilancia de emergencia activa"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:background="@drawable/status_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Área principal con micrófono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Icono de micrófono principal -->
            <ImageView
                android:id="@+id/ivMicrophone"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/microphone_background"
                android:clickable="true"
                android:contentDescription="Micrófono para comandos de voz"
                android:elevation="6dp"
                android:focusable="true"
                android:padding="30dp"
                android:src="@drawable/ic_microfono" />

            <!-- Texto de instrucciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Habla ahora"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Área de texto reconocido -->
        <ScrollView
            android:id="@+id/scrollMain"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/text_area_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTextoReconocido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="El texto reconocido aparecerá aquí..."
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

        </ScrollView>

        <!-- Indicador de emergencia -->
        <LinearLayout
            android:id="@+id/layoutEmergencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/emergency_background"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_emergency"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEmergencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modo emergencia activado"
                android:textColor="@color/emergency_text"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Overlay para lista de medicamentos -->
    <LinearLayout
        android:id="@+id/layoutMedicamentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#DD000000"
        android:clickable="true"
        android:focusable="true">

        <!-- Contenedor de la lista con fondo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@drawable/medications_background"
            android:elevation="8dp">

            <!-- Header de la lista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/header_background"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mis Medicamentos"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/btnCerrarLista"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Cerrar lista" />

            </LinearLayout>

            <!-- Lista de medicamentos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMedicamentos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:clipToPadding="false" />

            <!-- Botón para ocultar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnOcultarMedicamentos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocultar Lista"
                    android:background="@drawable/button_background"
                    android:textColor="@color/button_text"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnAgregarMedicamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Nuevo"
                    android:background="@drawable/button_background"
                    android:textColor="@color/button_text"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>